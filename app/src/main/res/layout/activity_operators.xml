<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
<!-- android:fadeScrollbars="false" 设置成true可以实现滚动条的自动隐藏和显示-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Creating创建操作"
            android:textAllCaps="false"
            android:onClick="startCreatingActivity"
            android:textColor="@android:color/black" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TransForming变换操作"
            android:textAllCaps="false"
            android:onClick="startTransFormingActivity"
            android:textColor="@android:color/black" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filtering过滤操作"
            android:textAllCaps="false"
            android:onClick="startFilteringActivity"
            android:textColor="@android:color/black" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Combining结合操作"
            android:textAllCaps="false"
            android:onClick="startCombiningActivity"
            android:textColor="@android:color/black" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ErrorHandling错误处理"
            android:textAllCaps="false"
            android:onClick="startErrorHandlingActivity"
            android:textColor="@android:color/black" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Utility辅助操作"
            android:textAllCaps="false"
            android:onClick="startUtilityActivity"
            android:textColor="@android:color/black" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conditional条件和布尔操作"
            android:textAllCaps="false"
            android:onClick="startConditionalActivity"
            android:textColor="@android:color/black" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mathematical算术和聚合操作"
            android:textAllCaps="false"
            android:onClick="startMathematicalActivity"
            android:textColor="@android:color/black" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Async异步操作"
            android:textAllCaps="false"
            android:onClick="startAsyncActivity"
            android:textColor="@android:color/black" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect连接操作"
            android:textAllCaps="false"
            android:onClick="startConnectActivity"
            android:textColor="@android:color/black" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert转换操作"
            android:textAllCaps="false"
            android:onClick="startConvertActivity"
            android:textColor="@android:color/black" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blocking阻塞操作"
            android:textAllCaps="false"
            android:onClick="startBlockingActivity"
            android:textColor="@android:color/black" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="String字符串操作"
            android:textAllCaps="false"
            android:onClick="startStringActivity"
            android:textColor="@android:color/black" />
    </LinearLayout>

</ScrollView>
